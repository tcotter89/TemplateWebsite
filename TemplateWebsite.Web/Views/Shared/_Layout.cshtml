    <div class="container">
        <div class="header clearfix col-sm-12">
            <div class="site-title centered col-sm-12">
                <h3 class="text-muted">@TemplateResources.SiteTitle</h3>
            </div><!-- /site-title -->
            <div class="menu-btns centered col-sm-9">
                <nav>
                    <ul class="nav nav-pills centered">
                        @Html.MenuItem("Index", "Home", TemplateResources.MenuItem1)
                        @Html.MenuItem("Index", "Forums", TemplateResources.MenuItem2)
                        @Html.MenuItem("Index", "Media", TemplateResources.MenuItem3)
                    </ul>
                </nav>
            </div><!-- /menu-btns -->
            <div class="login col-sm-3">
                @Html.Partial("_LoginPartial")
            </div><!-- /login -->
        </div><!-- /header -->
        
        <div class="col-sm-12">
            <div class="right-sidebar col-sm-3">
                <a class="content-btn" href="/Home/RealmStatus">
                    @TemplateResources.SidebarItem1
                </a>
                <a class="content-btn" href="/LatestUpdates">
                    @TemplateResources.SidebarItem2
                </a>
                <a class="content-btn" href="/Services">
                    @TemplateResources.SidebarItem3
                </a>
                <a class="content-btn" href="/Shop">
                    @TemplateResources.SidebarItem4
                </a>
            </div>

            <div class="container body-content col-sm-9">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - @TemplateResources.Company</p>
                </footer>
            </div><!-- /body-content -->
        </div>
    </div><!-- /container -->
